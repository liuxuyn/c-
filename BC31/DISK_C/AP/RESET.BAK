void resetCC(struct body *a,struct body *b,GamePara *para)
{

	float dx=a->x-b->x,
		  dy=a->y-b->y,angle,
		  r=a->r+b->r;
	HideShape(a,para);
	angle=atan(dy/dx);
	a->x=b->x+r*cos(angle);
	a->y=b->y+r*sin(angle);
	ShowShape(a,para);
}

